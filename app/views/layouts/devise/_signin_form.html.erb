<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-vertical"}) do |f| %>
  <div class="form-group">
    <%= f.input :email, required: false, autofocus: true, placeholder: "Email"  %>
  </div>
  <div class="form-group">
    <%= f.input :password, required: false, palceholder: "Password" %>
  </div>
  <div class="form-group">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-group" role="group">
    <%= f.button :submit, "Submit", class: "btn btn-default btn-sign-process" %>
  </div>
<% end %>
<div class="pull-right">
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
</div>
