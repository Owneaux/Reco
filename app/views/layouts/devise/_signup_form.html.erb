<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-vertical"}) do |f| %>
  <div class="form-group">
    <%= f.input :email, required: false, autofocus: true, placeholder: "Email"  %>
  </div>
  <div class="form-group">
    <%= f.input :password, required: false, palceholder: "Password", hint: ("#{@minimum_password_length} characters minimum" if @validatable)  %>
  </div>
  <div class="form-group">
    <%= f.input :password_confirmation, required: true %>
  </div>
  <div class="form-group" role="group">
    <%= f.button :submit, "Submit", class: "btn btn-default btn-sign-process" %>
  </div>
<% end %>
<div class="pull-right">
  <%= link_to "Log in", new_session_path(resource_name) %><br />
</div>
