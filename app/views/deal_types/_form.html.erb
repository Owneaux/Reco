<%= simple_form_for(@deal_type, html: { class: "form-vertical" }) do |f| %>
  <div class="form-group">
    <%= f.input :name, required: true, autofocus: true, placeholder: "Name"  %>
  </div>
  <div class="form-group">
        <label for="commission">Commission</label>
        <input type="text" data-role="spinbox" name="deal_type[commission]" id="commission" data-options='{"type":"horizontal"}' value="1" min="0" max="9" />
  </div>

  <div class="form-group">
    <%= f.text_area :description, required: false, placeholder: "Description", rows: 4, cols: 40 %>
  </div>
  <div class="form-group" role="group">
    <%= f.button :submit, "Submit", class: "btn btn-default btn-sign-process" %>
  </div>
<% end %>
