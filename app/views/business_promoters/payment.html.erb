
<div class="payment-container">
  <div class="report-info-container">
    <div class="report-info-badget" id="credit">
      <div class="badget-value">
        <%= @credit %>
      </div>
      <div class="badget-title">
        Credit
      </div>
    </div>
  </div>
  <div class="payment-form">
    <form action="<%= business_promoters_checkout_payment_path %>" method="post" class="ui-body ui-body-a ui-corner-all">
      <input type="hidden" name="promoter_id" value="<%= @promoter.id %>"/>
      <fieldset>
        <label for="amount">Amount:</label>
        <input name="amount" id="amount" min="0" max="<%= @credit %>" type="range" value="0" autocomplete="off">
      </fieldset>
      <fieldset>
        <label for="description">For:</label>
        <input name="what_for" id="what_for" type="text" autocomplete="off" placeholder="Max 10 character" maxlength="10">
      </fieldset>

      <button type="submit" class="btn btn-default btn-pay">Pay</button>
    </form>
  </div>
</div>
