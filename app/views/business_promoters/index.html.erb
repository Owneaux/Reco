<ul data-role="listview" data-inset="false">
  <% @business_promoters.each do |promoter| %>
    <li>
      <% if !@source_view.nil? %>
        <a href="<%= new_deal_path + @query_string + '&promoter_id=' + promoter.id.to_s %>">
      <% else %>
        <a href="#">
      <% end %>
          <% if promoter.picture.nil? %>
            <%= image_tag("default_avatar.png") %>
          <% else %>
            <img src="<%= promoter.picture %>">
          <% end %>
          <h2><%= promoter.name %></h2>
        </a>
    </li>
  <% end %>
</ul>